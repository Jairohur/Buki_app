<div class="card shadow-sm w-100" style="height: 500px;">
  <%= image_tag url_for(book.cover_image),
      class: "card-img-top",
      style: "object-fit: cover; height: 250px; object-position: top;" %>

  <div class="card-body" style="display: flex; flex-direction: column; height: 250px;">
    <h2 class="card-title mb-2" style="font-size: 1.1rem;"><%= book.title %></h2>
    <h3 class="card-text mb-2" style="font-size: 0.95rem;"><%= book.author %></h3>
    <p class="card-text mt-auto mb-0" style="line-height: 1.3; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;"><%= book.description %></p>
  </div>
</div>
