<div class="container">
  <h1>Favorites</h1>
  <div class="cards-area">
    <% if @books.present? %>
      <% @books.each do |favorite| %>
        <div class="card-favorites">
          <div><%= favorite.title %></div>
          <div><%= favorite.author %></div>
        </div>
      <% end %>
    <% else %>
      <div class="message-no-fovorite">You don't have any fovorite books yet. Tap on the Favorite button inside a book to see them here!</div>
    <% end %>
  </div>
  <!--
<h1>Favorites#index</h1>
<p>Find me in app/views/favorites/index.html.erb</p>
-->
</div>
