<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div style="text-align: center; margin-top: 50px;">
        <%= image_tag "avatar.png", size: "100x100", style: "border-radius: 50%;" %>
        <h1>Kodomo Junior</h1>
      </div>
    </div>
  </div>
  <div class="user_form">
    <%= simple_form_for current_user do |f| %>
      <%= f.input :username %>
      <fieldset class="form-group check_boxes optional snippet_tags">
        <legend class="col-form-label pt-0">Select Languages</legend>
        <% DeepL.languages.sort_by { |lang| lang.name.upcase }.each_with_index do |language, index| %>
          <div class="tag-item">
            <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="<%= language.code %>" name="user[languages][]" id="<%= language.code %>-<%= index %>" <%= "checked" if current_user.languages.include?(language.code) %>>
            <label class="form-check-label collection_check_boxes" for="<%= language.code %>-<%= index %>"><%= language_name(language.code) %></label>
          </div>
        <% end %>
      </fieldset>
      <div class="d-flex justify-content-center">
        <%= f.submit class: "btn btn-primary custom-button mt-3 w-50" %>
      </div>
    <% end %>
  </div>
</div>
