<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div style="text-align: center; margin-top: 50px;">
        <%= image_tag "avatar.png", size: "100x100", style: "border-radius: 50%;" %>
        <h1>Kodomo Junior</h1>
      </div>
      <div class="user_form" style="border-radius: 24px;">
        <%= simple_form_for current_user do |f| %>
        <%= f.input :username %>
          <%= f.input :languages,
      collection: DeepL.languages.map { |lang| [lang.code, lang.name.capitalize] },
      label_method: :second,
      value_method: :first,
      include_blank: false,
      input_html: {
      multiple: true,
      style: "height: 300px; padding: 8px;"
      }
    %>
          <div style="text-align: center;">
            <%= f.submit class: "btn btn-primary custom-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
