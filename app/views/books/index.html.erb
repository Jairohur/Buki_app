<div class="container mt-4">
  <div class="row g-4">
    <% @books.each do |book| %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><strong><%= book.author %></strong></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
