<div class="book-card">
  <div class="card">
    <% if book.cover_image.attached? %>
      <%= image_tag book.cover_image, class: "card-image" %>
    <% else %>
      <p>No cover image</p>
    <% end %>

    <div class="card-content">
      <h3><%= book.title %></h3>
      <p><%= truncate(book.description, length: 100) %></p>
    </div>
  </div>
</div>
