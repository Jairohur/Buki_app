<div class="container my-5" style="max-width: 500px;">
  <h2 class="mb-4">Create a New Book</h2>

  <%= form_with url: books_path, method: :post, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :character, "Character Name", class: "form-label" %>
      <%= form.text_field :character, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :species, "What kind of character is it?", class: "form-label" %>
      <%= form.select :species, options_for_select(["Bear", "Rabbit", "Fox", "Turtle", "Cat", "Dog", "Mouse", "Other"]), { prompt: "Choose a species" }, class: "form-select", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :page_count, "Number of pages", class: "form-label" %>
      <%= form.number_field :page_count, min: 5, max: 10, value: 5, class: "form-control", required: true %>
      <small class="form-text text-muted">Minimum 5 pages, maximum 10.</small>
    </div>

    <div class="mb-3">
      <%= form.label :style, "Illustration Style", class: "form-label" %>
      <%= form.select :style,
          options_for_select([
            ["Soft style (like Peter Rabbit)", "beatrix_potter"],
            ["Classic Disney-like", "early_disney"],
            ["Modern Cute Cartoon", "modern_cartoon"]
          ]),
          { prompt: "Choose a style" },
          class: "form-select", required: true %>
      <small class="form-text text-muted">This guides the drawing style. Results may vary slightly.</small>
    </div>

    <%= form.submit "Generate Book", class: "btn btn-primary w-100" %>
  <% end %>
</div>
