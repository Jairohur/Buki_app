<%= form_with model: @book, url: books_path do |f| %>
  <p>
    <%= label_tag :character, "Main character" %><br>
    <%= text_field_tag :character, params[:character] %>
  </p>

  <p>
    <%= label_tag :action, "What is the character doing?" %><br>
    <%= text_field_tag :action, params[:action] %>
  </p>

  <p>
    <%= label_tag :location, "Story setting" %><br>
    <%= text_field_tag :location, params[:location] %>
  </p>

  <p>
    <%= label_tag :page_count, "Number of pages" %><br>
    <%= number_field_tag :page_count, params[:page_count] || 5, min: 5 %>
  </p>

  <p>
    <div style="text-align: center;">
      <%= button_tag(type: "submit", class: "custom-button", style: "border: 0;") do %>
    Generate Book
    <i class="fa-solid fa-wand-magic-sparkles"></i>
  <% end %>
  </p>
<% end %>
