<div class="container my-5" style="max-width: 500px;">

  <%= form_with url: books_path, method: :post, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :character, "Character Name", class: "form-label" %>
      <%= form.text_field :character_name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :species, "What kind of character is it?", class: "form-label" %>
      <%= form.select :character_species, options_for_select(["Bear", "Rabbit", "Fox", "Turtle", "Cat", "Dog", "Mouse", "Other"]), { prompt: "Choose a species" }, class: "form-select", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :page_count, "Number of pages", class: "form-label" %>
      <%= form.number_field :page_count, min: 5, max: 10, value: 5, class: "form-control", required: true %>
      <small class="form-text text-muted">Minimum 5 pages, maximum 10.</small>
    </div>

  <p>
    <div style="text-align: center;">
      <%= button_tag(type: "submit", class: "custom-button", style: "border: 0;") do %>
    Generate Book
    <i class="fa-solid fa-wand-magic-sparkles"></i>
  <% end %>
  </p>
<% end %>
